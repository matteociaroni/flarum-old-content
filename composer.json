{
    "name": "matteociaroni/flarum-old-content",
    "description": "A Flarum extension to mark old posts and discussions as outdated",
    "keywords": [
        "flarum"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": "^1.8.0"
    },
    "authors": [
        {
            "name": "Matteo Ciaroni",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "MatteoCiaroni\\OldContent\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Old content",
            "category": "",
            "icon": {
                "name": "fa fa-exclamation",
                "color": "white",
                "backgroundColor": "#dd3636"
            }
        },
        "flarum-cli": {
            "modules": {
                "admin": true,
                "forum": true,
                "js": true,
                "jsCommon": false,
                "css": true,
                "locale": true,
                "gitConf": false,
                "githubActions": false,
                "prettier": false,
                "typescript": true,
                "bundlewatch": false,
                "backendTesting": false,
                "editorConfig": false,
                "styleci": false
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
